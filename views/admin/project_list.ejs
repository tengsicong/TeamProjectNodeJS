<%- include('header') %>

    <!-- main content start-->
    <div id="page-wrapper">
        <div class="tables">
            <div class="blank-page widget-shadow scroll">
                <table width="100%">
                    <tr>
                        <td>
                            <h2><b>Auto Allocated</b></h2>
                            <p>Click button to automatically allocate project for each team according to their preference</p>
                        </td>
                        <td>
                            <button onclick="{ location.href='Project_List.html'}" type="button" class="btn btn-primary"
                                    style="float: right">Allocate
                            </button>
                        </td>
                    </tr>
                </table>
            </div>

            <% for(let i = 0; i < proposal.length; i++) { %>
            <div id="approved"></div>
            <div class="bs-example widget-shadow" data-example-id="contextual-table">
                <h3 style="color: #629aa9"><b>Approved</b></h3>
                <br>
                <table class="table">
                    <tbody>

					<% if (proposal[i].Status == "approved") { %>
                    <tr class="active" onclick="window.location.href='project_approved.html'">
                        <a href="project_approved.html">
                            <th scope="row">1</th>
                            <td style="cursor:pointer" width="40%"><b><%=proposal[i].Topic%></b></td>
                            <td style="cursor: pointer" width="50%"><%= 'client name: ' + proposal[i].ClientID.Name %></td>
							<% if (proposal[i].Team != undefined) { %>
                            <td width="5%"><span class="label label-success" style="float:right;font-size:15px">Allocated</span>
                            </td>
							<%} else { %>
                            <td width="5%"><span class="label label-success" style="float:right;font-size:15px"></span>
							<%}%>
                            <td width="5%"><span class="label label-success"
                                                 style="float:right;font-size:15px">Approved</span></td>
                        </a>
                    </tr>
                    </tbody>
                </table>
            </div>

			<% } else if(proposal[i].Status == "pending"){ %>
            <div id="pending"></div>
            <div class="bs-example widget-shadow" data-example-id="contextual-table">
                <h3 style="color: #629aa9"><b>Pending</b></h3>
                <br>
                <table class="table">
                    <tbody>
                    <tr class="active" onclick="window.location.href='project_pending.html'">
                        <a href="project_approved.html">
                            <th scope="row">5</th>
                            <td style="cursor:pointer" width="40%"><b><%=proposal[i].Topic%></b></td>
                            <td style="cursor: pointer" width="55%"><%= 'client name: ' + proposal[i].ClientID.Name %></td>
                            <td width="5%"><span class="label label-warning"
                                                 style="float:right;font-size:15px">Pending</span></td>
                        </a>
                    </tr>
                    </tbody>
                </table>
            </div>
            <br>
			
			<% } else if(proposal[i].Status == "rejected"){ %>
                <div id="rejected"></div>
                <div class="bs-example widget-shadow" data-example-id="contextual-table">
                <h3 style="color: #629aa9"><b>Rejected</b></h3>
                <br>
                <table class="table">
                    <tbody>
                    <tr class="active" onclick="window.location.href='project_rejected.html'">
                        <a href="project_approved.html">
                            <th scope="row">1</th>
                            <td style="cursor:pointer; font-weight: bolder" width="40%"><b><%=proposal[i].Topic%></b></td>
                            <td style="cursor: pointer" width="55%"><%= 'client name: ' + proposal[i].ClientID.Name %></td>
                            <td width="5%"><span class="label label-danger"
                                                 style="float:right;font-size:15px">Rejected</span></td>
                        </a>
                    </tr>
                    <tr>
                    <tr onclick="window.location.href='project_rejected.html'">
                        <a href="project_approved.html">
                            <th scope="row">2</th>
                            <td style="cursor:pointer" width="40%"><b>java format autocheck</b></td>
                            <td style="cursor: pointer" width="55%">client name: department of computer science</td>
                            <td width="5%"><span class="label label-danger"
                                                 style="float:right;font-size:15px">Rejected</span></td>
                        </a>
                    </tr>
                    <tr class="success">
                    <tr class="active" onclick="window.location.href='project_rejected.html'">
                        <a href="project_approved.html">
                            <th scope="row">3</th>
                            <td style="cursor:pointer" width="40%"><b>"template project</b></td>
                            <td style="cursor: pointer" width="55%">client name: department of computer science</td>
                            <td width="5%"><span class="label label-danger"
                                                 style="float:right;font-size:15px">Rejected</span></td>
                        </a>
                    </tr>
                    <tr onclick="window.location.href='project_rejected.html'">
                        <a href="project_approved.html">
                            <th scope="row">4</th>
                            <td style="cursor:pointer" width="40%"><b>build a team project website</b></td>
                            <td style="cursor: pointer" width="55%">client name: department of computer science</td>
                            <td width="5%"><span class="label label-danger"
                                                 style="float:right;font-size:15px">Rejected</span></td>
                        </a>
                    </tr>

                    </tbody>
                </table>
            </div>
			 <%} else { %>
			 <%}%>
            <%}%>
        </div>

    </div>

<%- include('footer') %>